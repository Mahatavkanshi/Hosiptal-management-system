# Docker Compose Environment Variables
# Copy this file to .env and update the values

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=hospital_management

# Backend Configuration
NODE_ENV=production
PORT=5000
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key

# Frontend URLs (must match your docker-compose setup)
FRONTEND_URL=http://localhost:5173

# Frontend Configuration
VITE_API_URL=http://localhost:5000/api
VITE_SOCKET_URL=http://localhost:5000
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id

# Optional: External Database
# If not using docker-compose PostgreSQL, set these:
# DB_HOST=your-db-host
# DB_PORT=5432
# DB_NAME=hospital_management
# DB_USER=postgres
# DB_PASSWORD=your_password

# Optional: Redis
# REDIS_URL=redis://redis:6379

# Optional: Email (SendGrid)
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=noreply@hospital.com

# Optional: SMS (Twilio)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Optional: Payments (Razorpay)
# RAZORPAY_KEY_ID=your_razorpay_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Optional: Cloud Storage (Cloudinary)
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
